{
  "name": "chai-snap",
  "version": "1.0.2",
  "description": "Snapshot testing plugin for Chai",
  "keywords": [
    "chai",
    "snapshot",
    "testing",
    "mocha",
    "bdd",
    "tdd"
  ],
  "publishConfig": {
    "provenance": true
  },
  "homepage": "https://github.com/PuppyOne/chai-snap#readme",
  "bugs": {
    "url": "https://github.com/PuppyOne/chai-snap/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PuppyOne/chai-snap.git"
  },
  "license": "MIT",
  "author": "PuppyOne <zheng_xz@qq.com>",
  "type": "module",
  "main": "src/index.js",
  "types": "./src/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc --sourceMap",
    "test": "mocha",
    "coverage": "c8 --reporter=html --reporter=text --all npm test",
    "coverage:ci": "c8 --100 --reporter=html --reporter=text --all npm test"
  },
  "devDependencies": {
    "@types/chai": "^5.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.10",
    "c8": "^10.1.3",
    "mocha": "^11.1.0",
    "snap-shot-it": "^7.9.10",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "chai": "5.x",
    "snap-shot-it": "7.x"
  }
}
